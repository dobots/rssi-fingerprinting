<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="nl.dobots.rssifingerprinting.LocateActivity">

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Locate"
		android:id="@+id/btnLocate"
		android:layout_alignParentTop="true"
		android:layout_alignParentStart="true"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Last Update"
		android:id="@+id/lblLastUpdate"
		android:layout_below="@+id/btnLocate"
		android:layout_alignStart="@+id/btnLocate"
		android:layout_marginTop="36dp"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/txtLastUpdate"
		android:layout_alignTop="@+id/lblLastUpdate"
		android:layout_toRightOf="@+id/lblLastUpdate"
		android:layout_marginStart="24dp"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Location"
		android:id="@+id/lblLocation"
		android:layout_below="@+id/lblLastUpdate"
		android:layout_alignStart="@+id/lblLastUpdate"
		android:layout_marginTop="36dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/txtLocation"
		android:layout_alignTop="@+id/lblLocation"
		android:layout_alignStart="@+id/txtLastUpdate"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Best"
		android:id="@+id/lblBest"
		android:layout_below="@+id/lblLocation"
		android:layout_alignStart="@+id/lblLocation"
		android:layout_marginTop="45dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/txtBest"
		android:layout_alignTop="@+id/lblBest"
		android:layout_alignStart="@+id/txtLocation"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Last Best"
		android:id="@+id/lblLastBest"
		android:layout_below="@+id/lblBest"
		android:layout_alignStart="@+id/lblBest"
		android:layout_marginTop="45dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/txtLastBest"
		android:layout_alignTop="@+id/lblLastBest"
		android:layout_alignStart="@+id/txtBest"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Old Best"
		android:id="@+id/lblOldBest"
		android:layout_below="@+id/lblLastBest"
		android:layout_alignStart="@+id/lblLastBest"
		android:layout_marginTop="48dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:id="@+id/txtOldBest"
		android:layout_alignTop="@+id/lblOldBest"
		android:layout_alignStart="@+id/txtLastBest"/>

</RelativeLayout>
